}

.button {
  padding: 1em 2em;
  border: none;
  border-radius: 5px;
  font-weight: bold;
  letter-spacing: 5px;
  text-transform: uppercase;
  color: #2caf88;
  transition: all 1000ms;
  font-size: 15px;
  position: relative;
  overflow: hidden;
  outline: 2px solid #2caf88;
}

button:hover {
  color: #ffffff;
  transform: scale(1.1);
  outline: 2px solid #4ea35d;
  box-shadow: 4px 5px 17px -4px #20717e;
}

button::before {
  content: "";
  position: absolute;
  left: -50px;
  top: 0;
  width: 0;
  height: 100%;
  background-color: #2caf88;
  transform: skewX(45deg);
  z-index: -1;
  transition: width 200ms;
}

button:hover::before {
  width: 250%;
}
