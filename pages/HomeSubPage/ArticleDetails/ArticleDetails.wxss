.articleDetails {
  width: 100%;
  height: 100%;
}

.DogImg {
  width: 100%;
}

.DogMsg {
  width: 100%;
  padding: 20rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background: #F6F6F6 !important;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
}

.msgName {
  font-size: larger;
}

.msgValue {
  color: #708090;
}

.tipsText {
  background-color: #f1d4d8 !important;
  border-left: 5rpx #DC143C solid;
  padding: 10rpx;
  border-radius: 10rpx;
}

.userChoice {
  width: 100%;
  position: fixed;
  bottom: 0;
  border-top: 1rpx black solid;
  background: white !important;
}

.userBtns {
  display: flex;
  justify-content: space-around;
}

.btnMsg {
  margin-left: 10rpx;
}

.btnContainer {
  padding: 25rpx;
}

.Btn {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}